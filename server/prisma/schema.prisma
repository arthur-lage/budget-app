// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id     String   @id
  icon   String
  name   String
  date   DateTime
  amount Float
  User   User?    @relation(fields: [userId], references: [id])
  userId String?
}

model Income {
  id     String   @id
  icon   String
  name   String
  date   DateTime
  amount Float
  User   User?    @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  expenses  Expense[]
  incomes   Income[]
  createdAt DateTime  @default(now())
}
